@model List<UserModel>
@{
    ViewData["Title"] = "User List";
}

<div class="text-center">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
            @TempData["ErrorMessage"]
        </div>
    }

    <h1 class="display-4" style="margin-bottom: 50px">User List</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start" style="margin-bottom: 10px">
        <a class="btn btn-success" role="button" asp-controller="User" asp-action="Create">Add new user</a>
    </div>

    <table class="table table-striped" id="usersTable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Profile Type</th>
                <th scope="col">Register Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.Name</td>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td>@user.Profile</td>
                <td>@user.RegisterDate</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Crud buttons">
                        <a role="button" class="btn btn-primary" asp-route-id="@user.Id" asp-controller="User" asp-action="Edit">Edit</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@user.Id" asp-controller="User" asp-action="DeleteConfirmation">Delete</a>
                    </div>
                </td>
            </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">No users found</td></tr>
            }
        </tbody>
    </table>
</div>