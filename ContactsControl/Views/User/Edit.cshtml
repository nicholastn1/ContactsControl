@using ContactsControl.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="text-center">

    <h1 class="display-4">Edit Contact</h1>

</div>

<form asp-controller="User" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter contact name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter contact email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label for="phone" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter contact login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-3">
        <label for="profile" class="form-label">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Select</option>
            <option value="@ProfileEnum.Admin">Admin</option>
            <option value="@ProfileEnum.Standard">Standard</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>